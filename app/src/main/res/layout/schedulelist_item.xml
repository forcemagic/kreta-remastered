<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/scheduleStatus"
        android:background="@android:color/white"
        android:paddingStart="24dp"
        tools:ignore="RtlSymmetry"
        android:paddingLeft="24dp"
        android:layout_toRightOf="@+id/scheduleStatus"
        android:layout_marginLeft="23dp"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/scheduleClassNum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="#1"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            tools:ignore="HardcodedText"
            android:layout_alignParentLeft="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/scheduleClassNum"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/scheduleClassNum"
            android:layout_marginLeft="8dp">

            <TextView
                android:id="@+id/scheduleSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blablabla"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/scheduleTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/blablabla"
                android:layout_marginLeft="2dp" />

            <TextView
                android:id="@+id/scheduleTimes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/blablabla"
                android:textSize="12sp"
                android:layout_marginLeft="2dp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/scheduleStatus"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="21dp"
        app:srcCompat="@drawable/check_circle_icon_green"
        android:layout_marginLeft="8dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/scheduleReplacement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="-4dp"
        android:layout_toEndOf="@+id/scheduleStatus"
        android:background="?attr/colorControlHighlight"
        android:paddingBottom="2dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:paddingTop="2dp"
        android:text="@string/blablabla"
        android:layout_toRightOf="@+id/scheduleStatus"
        android:layout_alignParentRight="true" />

</RelativeLayout>