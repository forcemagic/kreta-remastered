<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/gradeBarTop"
        android:layout_width="4dp"
        android:layout_height="22dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/gradebar_top" />

    <ImageView
        android:id="@+id/gradeBullet"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25.5dp"
        app:srcCompat="@drawable/importantgrade" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/gradeBullet"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_alignBottom="@+id/gradeBarBottom">

        <TextView
            android:id="@+id/grade"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:text="5"
            android:textColor="@android:color/black"
            android:textSize="36sp"
            android:typeface="normal" />

        <TextView
            android:id="@+id/gradeTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/blablabla"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <View
        android:id="@+id/gradeBarBottom"
        android:layout_width="4dp"
        android:layout_height="24dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/gradebar_bottom" />

</RelativeLayout>