<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gradeBullet"
        android:layout_alignStart="@+id/gradeBullet"
        android:layout_alignTop="@+id/gradeBullet"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/gradeBullet"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="36dp"
        tools:ignore="RtlSymmetry"
        android:paddingLeft="36dp"
        android:layout_toRightOf="@+id/gradeBullet"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="8dp"
        android:layout_alignLeft="@+id/gradeBullet">

        <TextView
            android:id="@+id/gradeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blablabla"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/gradeDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/blablabla"
            android:textSize="12sp"
            android:layout_marginLeft="2dp" />

        <TextView
            android:id="@+id/gradeDesc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/blablabla"
            android:textSize="12sp"
            android:layout_marginLeft="2dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/gradeBullet"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/normalgrade"
        android:layout_marginLeft="8dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/grade"
        android:layout_width="67dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:gravity="fill_vertical"
        android:text="5"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        tools:ignore="HardcodedText"
        android:layout_marginLeft="8dp"
        android:layout_alignParentLeft="true" />

</RelativeLayout>