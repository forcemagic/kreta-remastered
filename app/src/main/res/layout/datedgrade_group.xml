<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/datedgradegroupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="12dp"
        android:text="@string/blablabla"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <com.speedyblur.kretaremastered.views.HeightExpandedListView
        android:id="@+id/datedgradegroupSubItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/datedgradegroupTitle"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:divider="@null" />
</RelativeLayout>