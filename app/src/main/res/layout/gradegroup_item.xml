<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:id="@+id/gradeGroupInnerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gradeGroupTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:layout_toLeftOf="@+id/gradeGroupExpandIcon"
            android:layout_toStartOf="@+id/gradeGroupExpandIcon"
            android:padding="12dp"
            android:text="@string/blablabla"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"
            android:typeface="normal" />

        <ImageView
            android:id="@+id/gradeGroupExpandIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            app:srcCompat="@drawable/dropdown_icon_black" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/gradeGroupSubView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gradeGroupInnerLayout"
        android:background="@color/bgcolorActivity"
        android:visibility="gone" />

</RelativeLayout>